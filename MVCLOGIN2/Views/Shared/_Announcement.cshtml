@model IEnumerable<MVCLOGIN2.Models.annoucement>

<div class="col-lg-6" style="margin-top:5rem">
    
    <div class="jumbotron jumbotron-fluid" style=" padding-top:5px">

        <h2 style="text-align:center" >Announcements</h2>
        @{int i =1; }
        @foreach (var item in Model)
        {
            <div id="accordion" role="tablist" aria-multiselectable="true">
                <div class="card" style="padding-top:1rem;margin-top:1rem;margin-bottom:1rem">
                    <div class="card-header" role="tab" id="heading_@i" > 
                        <h5 class="mb-0">
                            <a style="color:darkslategrey" data-toggle="collapse" data-parent="#accordion" href="#collapse_@i" aria-expanded="true" aria-controls="collapse_@i">
                                <b>Announcement @i </b>
                            </a>
                        </h5>
                    </div>

                    <div id="collapse_@i" class="collapse" role="tabpanel" aria-labelledby="heading_@i">
                        <div class="card-block">
                            @Html.DisplayFor(modelItem => item.text)
                        </div>
                    </div>


                </div>
            </div>
            i++;
        }


    </div>

</div>

