
@{
    ViewBag.Title = "NewMessage";
}

@model MVCLOGIN2.Models.message

@Html.Partial("_StudentInfo")
<div class="row">
    <div class="container">
     
        <div class="row">
            <div class="container">



                <div class="list-group col-lg-2" style="margin-top:5rem; margin-left:5rem">
                    <a href="/KULLANICILAR/NewMessage" class="list-group-item">
                        New Message
                    </a>
                </div>
                <div class="list-group col-lg-2" style="margin-top:5rem ">
                    <a href="/KULLANICILAR/Inbox" class="list-group-item">
                        Inbox
                    </a>
                </div>
                <div class="list-group col-lg-2" style="margin-top:5rem">
                    <a href="/KULLANICILAR/Sent" class="list-group-item">
                        Sent
                    </a>
                </div>
               @using (Html.BeginForm())
               { 
                <div class="tab-pane col-lg-6" id="compose" style="margin-left:5rem">
                    <div class="container">
                        <div class="content-container clearfix">
                            <h2 class="content-title">New Message</h2>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input id="tokenfield" type="text" class="form-control" placeholder="To" name="y" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Subject" name="about" />
                                </div>
                                <textarea class="form-control" placeholder="message" name="text"></textarea>
                                <div class="btn-send">
                                    <button class="btn btn-success btn-lg"><span class="glyphicon glyphicon-send"></span> Send</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               }
            </div>

        </div>

    </div>
</div>

<div class="col-lg-12" style="margin-top:3rem">
    @Html.Partial("_LeftBar")


</div>

