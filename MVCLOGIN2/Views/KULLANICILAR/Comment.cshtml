@model IEnumerable<MVCLOGIN2.Models.forum>

@TempData["alert"]

@{
    ViewBag.Title = "Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-3" style="margin-left:3rem">
    <div class="card hovercard" style="margin-top:5rem">
        <div class="cardheader">
        </div>
        <div class="avatar">
            <img alt="" src="@Session["stufoto"]">
        </div>
        <div class="info">
            <div class="title">
                <h2>@Session["StudentName"] </h2>
            </div>
            <div class="desc">
                <h4>@Session["StudentNumber"]</h4>
            </div>
            <div class="desc"><h4>@Session["StudentDep"]</h4></div>
            <div class="desc"><h4>@Session["StudentFac"]</h4></div>
            <div class="desc"><h4>Advisor: @Session["stuinst"]</h4></div>
        </div>
    </div>
    <p></p>
    <div class="list-group">
        <a href="@Url.Action("Schedule","Kullanicilar")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Schedule</a>
        <a href="@(Session["curriculum"])" target="_blank" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Curriculum</a>
        <a href="http://kutuphane.kemerburgaz.edu.tr/" target="_blank" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Library</a>
        <a href="@Url.Action("CourseRegistration","Kullanicilar")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Course Registration</a>
        <a href="@Url.Action("Exam","Kullanicilar")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Exam Schedule</a>
        <a href="@Url.Action("Grades","Kullanicilar")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Grade Status</a>
        <a href="@Url.Action("Message","Kullanicilar")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Message</a>
        <a href="/kullanicilar/forum" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Forum</a>
    </div>
</div>
<div class="container">
    <div class="row">
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            @using (Html.BeginForm("Comment", "KULLANICILAR", FormMethod.Post))
            {
                
                <div id="logout">
                    <div class="page-header">
                        <h3 class="reviews"> @Session["CurrentCourse"]</h3>
                    </div>
                    <div class="comment-tabs">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Comments</h4></a></li>
                            <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Add comment</h4></a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="comments-logout">

                                @foreach (var item in Model)
                                {
                                    <ul class="media-list">

                                        <li class="media">
                                            <a class="pull-left" href="#">
                                                <img class="media-object img-circle" src="@item.student.image" alt="profile">
                                            </a>
                                            <div class="media-body">
                                                <div class="well well-lg">
                                                    <h4 class="media-heading text-uppercase reviews"> @item.student.stufullname</h4>
                                                    <ul class="media-date text-uppercase reviews list-inline">
                                                        <li class="media-date">@item.addedtime</li>
                                                    </ul>
                                                    <p class="media-comment">
                                                        @item.text
                                                    </p>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                }
                            </div>

                            <div class="tab-pane" id="add-comment">
                                <form action="#" method="post" class="form-horizontal" id="commentForm" role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Comment</label>
                                        <div class="col-sm-9">
                                            <textarea class="form-control" name="text" id="addComment" rows="5"></textarea>
                                        </div>
                                    </div>      
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span> Send </button>
                                        </div>
                                    </div>
                                </form>
                            </div>



                        </div>
                    </div>
                </div>
            }
        </div>




    </div>

    <div class="row">
        <div class="col-lg-3 ">
        </div>

    </div>
</div>



