@model IEnumerable<MVCLOGIN2.Models.grade>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-left:40rem">Home</h2>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info btn-large" })
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.finalpont)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.letterpoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cours.coursecode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cours.coursename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.student.stufullname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.finalpont)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.letterpoint)
        </td>
        <td>
             @Html.DisplayFor(modelItem => item.cours.coursecode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cours.coursename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.student.stufullname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.gradeID }, new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("Details", "Details", new { id = item.gradeID }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id = item.gradeID }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
